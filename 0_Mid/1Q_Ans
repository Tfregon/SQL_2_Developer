SET SERVEROUTPUT ON
SET VERIFY OFF
DECLARE
    V_JOBID EMPLOYEE.JOB_ID%TYPE;
    v_MAXSALARY EMPLOYEE.SALARY%TYPE;
BEGIN
    FOR REC IN (SELECT JOB_ID, MAX(SALARY) AS MAX_SALARY
                FROM EMPLOYEE
                GROUP BY JOB_ID)
    LOOP
        V_JOBID := REC.JOB_ID;
        V_MAXSALARY := REC.MAX_SALARY;
        DBMS_OUTPUT.PUT_LINE('Job ID: ' || V_JOBID || ', Max Salary: ' || V_MAXSALARY);
    END LOOP;
EXCEPTION
    WHEN NO_DATA_FOUND THEN
        DBMS_OUTPUT.PUT_LINE('THE INFORMATION DOESN''T EXIST');
END;
